<h1>this is a list of all players</h1>

<div class="container">
  <table>
    <thead>
      <tr>
        <td>Number</td>
        <td>Name</td>
        <td></td>
      </tr>
    </thead>
    <tbody>
      <% @players.each do |player| %>
        <tr>
          <td><%= player.id %></td>
          <td><%= player.name %></td>
          <td><%= link_to "Delete", player_path(player), method: :delete, data: { confirm: 'Are you certain you want to delete this?' }, class: 'btn btn-info' %></td>
          <td><%= link_to "NEW SCORE", new_player_score_path(player) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<br>

<%= link_to "BACK", root_path, class: 'btn btn-info' %>
</div>
